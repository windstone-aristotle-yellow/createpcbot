{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2021",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./",
    "diagnostics": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "incremental": false,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    ".idea",
    "node_modules"
  ]
}